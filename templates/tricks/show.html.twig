        <div class="columns">
            {% endif %}
            <div class="column is-half">


                {# {% if video.type == 'youtube' %} #}
                <iframe width="100%" height="250em" src="{{ 'https://www.youtube.com/embed/' ~ video.name }}" frameborder="0" allowfullscreen></iframe>
